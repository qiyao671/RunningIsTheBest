<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="LightSecondaryText">
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="DarkSecondaryText">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>
    
    <style name="MyTotalNumberText">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TotalNumberTextSmall" parent="MyTotalNumberText">
        <item name="android:textSize">@dimen/text_size_large</item>

    </style>    <style name="TotalNumberTextLarge" parent="MyTotalNumberText">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="MyModuleCardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/md_white_1000</item>
        <item name="android:paddingBottom">@dimen/base_list_item_vertical_margin</item>
        <item name="android:paddingEnd">@dimen/base_list_item_horizontal_margin</item>
        <item name="android:paddingStart">@dimen/base_list_item_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/base_list_item_vertical_margin</item>
    </style>

    <style name="MyModuleCardTitle">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="TransparentText">
        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="BestRunItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:paddingTop">@dimen/base_list_item_vertical_spacing</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingStart">@dimen/base_list_item_horizontal_spacing</item>
        <item name="android:paddingEnd">@dimen/base_list_item_horizontal_spacing</item>
    </style>

    <style name="BestRunTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/md_grey_600</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginStart">3dp</item>
    </style>
</resources>
