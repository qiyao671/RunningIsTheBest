<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.qiyao.bysj.runningisthebest.module.friends.viewmodel.FriendsSectionHeaderItemViewModel" />
    </data>
    <LinearLayout
        android:paddingStart="@dimen/base_list_item_horizontal_margin"
        android:paddingEnd="@dimen/base_list_item_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/md_grey_300"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@{viewModel.name}"
            android:textColor="@color/md_grey_600"
            android:textSize="@dimen/text_size_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</layout>