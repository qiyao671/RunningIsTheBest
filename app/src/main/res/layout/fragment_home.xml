<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <variable
            name="viewModel"
            type="com.qiyao.bysj.runningisthebest.module.home.viewmodel.HomeViewModel" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/user_info"
            android:paddingStart="@dimen/base_list_item_horizontal_margin"
            android:paddingEnd="@dimen/base_list_item_horizontal_margin"
            android:paddingTop="@dimen/base_list_item_vertical_margin"
            android:paddingBottom="@dimen/base_list_item_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<!--            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfile"
                app:imageUrl="@{viewModel.userProfileUrl}"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true" />-->
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_user_profile"
                android:src="@mipmap/ic_launcher"
                android:layout_width="@dimen/user_profile_size"
                android:layout_height="@dimen/user_profile_size"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tv_user_name"
                android:text="123"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@id/civ_user_profile"
                android:layout_marginStart="@dimen/base_list_item_horizontal_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/userId"
                android:text="123"
                android:textSize="16dp"
                android:layout_alignBottom="@id/civ_user_profile"
                android:layout_toEndOf="@id/civ_user_profile"
                android:layout_marginStart="@dimen/base_list_item_horizontal_spacing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/total_run"
            android:paddingStart="@dimen/base_list_item_horizontal_margin"
            android:paddingEnd="@dimen/base_list_item_horizontal_margin"
            android:paddingTop="@dimen/base_list_item_vertical_margin"
            android:paddingBottom="@dimen/base_list_item_vertical_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_total_distance"
                android:text="0.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="KM"
                android:layout_toEndOf="@id/tv_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="累计里程"
                android:layout_below="@id/tv_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentEnd="true"
                android:id="@+id/right_arrow"
                android:layout_width="20dp"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_toStartOf="@id/right_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_total_duration"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="累计小时"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_total_times"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:text="累计次数"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/best_achievement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft=""
                android:text="@string/best_achievement"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawableLeft=""
                android:text="@string/history"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    
</layout>