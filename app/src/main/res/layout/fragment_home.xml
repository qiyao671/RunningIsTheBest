<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >
    <data>
        <variable
            name="viewModel"
            type="com.qiyao.bysj.runningisthebest.module.home.viewmodel.HomeViewModel" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="253dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleGravity="center_horizontal"
                app:expandedTitleMarginTop="220dp"
                android:fitsSystemWindows="true"
                app:expandedTitleTextAppearance="@style/TransparentText"
                app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

                <RelativeLayout
                    android:id="@+id/user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingEnd="30dp"
                    android:paddingStart="30dp"
                    android:paddingTop="20dp"
                    app:layout_collapseMode="parallax"
                    app:layout_collapseParallaxMultiplier="0.3">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_user_profile"
                        android:layout_width="@dimen/user_profile_size"
                        android:layout_height="@dimen/user_profile_size"
                        android:layout_alignParentStart="true"
                        app:imageUrl="@{viewModel.userProfileUrl}" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@id/civ_user_profile"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="我是昵称"
                            android:textSize="@dimen/text_size_xlarge"
                            android:textColor="@color/md_white_1000"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="ID:123234"
                            style="@style/LightSecondaryText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="男 34岁"
                            style="@style/LightSecondaryText" />
                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="30dp"
                        android:layout_below="@id/civ_user_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:textColor="@color/md_white_1000"
                        android:text="个性签名： 我是签名哈哈哈哈" />

                </RelativeLayout>

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:layout_collapseMode="pin"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            </android.support.design.widget.CollapsingToolbarLayout>
        </android.support.design.widget.AppBarLayout>

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="606dp"
            android:background="@color/md_grey_100"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/total_run"
                    style="@style/MyModuleCardLayout">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true">

                        <TextView
                            android:id="@+id/tv_total_distance"
                            style="@style/MyTotalNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="26sp" />

                        <TextView
                            style="@style/MyTotalNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/tv_total_distance"
                            android:layout_marginStart="3dp"
                            android:layout_toEndOf="@id/tv_total_distance"
                            android:text="km"
                            android:textSize="@dimen/text_size_xlarge" />

                        <TextView
                            style="@style/DarkSecondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/tv_total_distance"
                            android:layout_marginTop="5dp"
                            android:text="累计里程" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/right_arrow"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_right" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@id/right_arrow"
                        android:layout_marginEnd="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_total_duration"
                            style="@style/MyTotalNumberText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_large"
                            android:text="0" />

                        <TextView
                            style="@style/DarkSecondaryText"
                            android:layout_marginTop="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="累计小时" />

                        <TextView
                            android:id="@+id/tv_total_times"
                            style="@style/MyTotalNumberText"
                            android:textSize="@dimen/text_size_large"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="0" />

                        <TextView
                            style="@style/DarkSecondaryText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="累计次数" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/best_achievement"
                    style="@style/MyModuleCardLayout">

                    <ImageView
                        android:layout_width="@dimen/home_ic_size"
                        android:layout_height="@dimen/home_ic_size"
                        android:src="@drawable/ic_best" />

                    <TextView
                        style="@style/MyModuleCardTitle"
                        android:text="@string/best_achievement" />

                    <ImageView
                        android:layout_width="@dimen/home_right_arrow_size"
                        android:layout_height="@dimen/home_right_arrow_size"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/history"
                    style="@style/MyModuleCardLayout">

                    <ImageView
                        android:layout_width="@dimen/home_ic_size"
                        android:layout_height="@dimen/home_ic_size"
                        android:src="@drawable/ic_history" />

                    <TextView
                        style="@style/MyModuleCardTitle"
                        android:text="@string/history" />

                    <ImageView
                        android:layout_width="@dimen/home_right_arrow_size"
                        android:layout_height="@dimen/home_right_arrow_size"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/config"
                    style="@style/MyModuleCardLayout">

                    <ImageView
                        android:layout_width="@dimen/home_ic_size"
                        android:layout_height="@dimen/home_ic_size"
                        android:src="@drawable/ic_config" />

                    <TextView
                        style="@style/MyModuleCardTitle"
                        android:text="@string/config" />

                    <ImageView
                        android:layout_width="@dimen/home_right_arrow_size"
                        android:layout_height="@dimen/home_right_arrow_size"
                        android:src="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>


    </android.support.design.widget.CoordinatorLayout>
    
</layout>